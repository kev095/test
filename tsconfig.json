{
  "include": ["./src"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "ESNext",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution":"node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
}
